    <div class="slidebar-menu">
        <center class="profile">
            <img src="/uploads/{{user.image}}" alt="user">
            
            <p>{{user.name}}</p>
        </center>
        <li class="item">
            <a href="/" class="menu-btn">
                <i class="fa fa-home"></i><span>Trang chủ</span>
            </a>
        </li>
        <li class="item" id="profile">
            <a href="" class="menu-btn">
