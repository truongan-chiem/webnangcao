                <span>Hồ sơ<i class="fas fa-chevron-down drop-down"></i></span>
            </a>
            <div class="sub-menu">
                {{#xif user.role '==' 'student'}}
                    <a href="/acc/profile">
                        <i class="fas fa-address-card"></i>
                        <span>Thông tin cá nhân</span>
                    </a>
                {{/xif}}
                {{#xif user.role '!=' 'student' }}
