
      <!-- wrapper start -->
      <div class="wrapper">
        <!-- header menu start -->
        {{>header}}
        <!-- header menu end -->

        <!-- slidebar start -->
        {{>slidebar}}
        <!-- sliderbar end -->

        <!-- main container start -->
        <div class="main-container">
            <div class="row">
                <div class="col-12">
                    <nav class="nav-link-anounouces shadow" aria-label="breadcrumb">
                        <ol class="breadcrumb">
                          <li class="breadcrumb-item"><a href="/">TRANG CHỦ</a></li>
                          <li class="breadcrumb-item active" aria-current="page">SỬA THÔNG BÁO</li>
                        </ol>
                      </nav>
                </div>
                <div class="col-11 mx-auto p-0">
                    <div class="box-profile px-3 px-md-5 py-4 shadow">
                        <h3>SỬA THÔNG BÁO</h3>
                        <form action="/announce/{{Announce._id}}/edit?_method=PUT" method="POST">
                            <div class="form-group row px-3 px-lg-5">
                                <label class="col-lg-2 col-form-label" for="title">
                                    Tiêu đề:
                                </label>
                                <input value="{{Announce.title}}" class="form-control col-lg-10" type="text" name="title" id="title" placeholder="Nhập tiêu đề...">
                            </div>
                            <div class="form-group row px-3 px-lg-5">
                                <label class="col-lg-2 col-form-label" for="content">
                                    Nội dung:
                                </label>
                                <textarea rows="5" cols="20"  class="form-control col-lg-10" name="content" id="content">{{Announce.content}}</textarea>
                            </div>  
                            {{#each msg}}
                                <div class="alert alert-success" role="alert">
                                    {{this}}
                                </div>
                            {{/each}}
                            <div class="btn-update d-flex justify-content-center">
                                <button class="btn btn-primary px-4">Sửa thông báo</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- main container end -->
      </div>  
      <!-- wrapper end -->
    
    <!-- scroll back to top start -->
    <button class="scroll-to-top shadow"><i class="fa fa-chevron-up"></i></button>
    <!-- scroll back to top end -->

