
      <!-- wrapper start -->
      <div class="wrapper">
        <!-- header menu start -->
        {{>header}}
        <!-- header menu end -->

        <!-- slidebar start -->
        {{>slidebar}}
        <!-- sliderbar end -->

        <!-- main container start -->
        <div class="main-container">
            <div class="row">
                <div class="col-12">
                    <nav class="nav-link-anounouces shadow" aria-label="breadcrumb">
                        <ol class="breadcrumb">
                          <li class="breadcrumb-item"><a href="/">TRANG CHỦ</a></li>
                          <li class="breadcrumb-item"><a href="/announce">DANH SÁCH THÔNG BÁO</a></li>
                          <li class="breadcrumb-item active" aria-current="page">TẠO THÔNG BÁO</li>
                        </ol>
                      </nav>
                </div>
                <div class="col-11 mx-auto p-0">
                    <div class="box-profile px-3 px-md-5 py-4 shadow">
                        <h3>TẠO THÔNG BÁO</h3>
                        <p style="display: none;" id="name_user">{{user.name}}</p>
                        <form action="" method="POST">
                            <div class="form-group row px-3 px-lg-5">
                                <label class="col-lg-2 col-form-label" for="title">
                                    Tiêu đề:
                                </label>
                                <input value="{{title}}" class="form-control col-lg-10" type="text" name="title" id="title" placeholder="Nhập tiêu đề...">
                            </div>
                            <div class="form-group row px-3 px-lg-5">
                                <label class="col-lg-2 col-form-label" for="content">
                                    Nội dung:
                                </label>
                                <textarea rows="5" cols="20"  class="form-control col-lg-10" name="content" id="content">{{content}}</textarea>
                            </div>  
                            {{#each errorAnnounce}}
                                <div class="alert alert-danger" role="alert">
                                    {{this}}
                                </div>
                            {{/each}}
                            {{#each successAnnounce}}
                                <div class="alert alert-success socketsign" role="alert">
                                    {{this}}
                                </div>
                            {{/each}}
                            <div class="btn-update d-flex justify-content-center">
                                <button class="btn btn-primary px-4">Tạo thông báo</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- main container end -->
      </div>  
      <!-- wrapper end -->
    
    <!-- scroll back to top start -->
    <button class="scroll-to-top shadow"><i class="fa fa-chevron-up"></i></button>
    <!-- scroll back to top end -->